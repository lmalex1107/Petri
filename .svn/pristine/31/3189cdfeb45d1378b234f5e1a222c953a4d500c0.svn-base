package view;

import java.awt.BorderLayout;
import java.util.ArrayList;

import javax.swing.JPanel;

import view.PetriGraph;

public class CenterPanel extends JPanel {
	PetriGraph petrigraph;
	public GraphPanel graphpanel;
	SymbolPanel symbolpanel; 
	
	public CenterPanel (PetriGraph petrigraph) {
		this.petrigraph = petrigraph;
		this.setLayout(new BorderLayout());
		symbolpanel = new SymbolPanel();
		graphpanel = new GraphPanel(petrigraph);
		this.add(symbolpanel, BorderLayout.NORTH);
		this.add(graphpanel, BorderLayout.SOUTH);
	}
	
	public void setPetriGraph(PetriGraph petrigraph) {
		this.petrigraph = petrigraph;
		graphpanel.setPetriGraph(this.petrigraph);
		
	}
}
