/*
	Dies ist die css-Datei, in der das Layout des Graphen beschrieben ist.
*/

/*
	Style-Angabe fuer einen Knoten
*/
node {
	size: 30px;
	
	fill-color: #99ccff;
	
	text-color: #003366;
	text-size: 14;

	stroke-mode: plain;
	stroke-color: #003366;
	stroke-width: 1px;
}

node.Transition {
	size: 20px, 20px;
	shape: box;
}


node.Place {
	size: 20px, 20px;
	shape: circle;
}

/*
   zusaetzliches Attribut "highlight" fuer einen Knoten, der
   hervorgehoben werden soll
*/




/*
   zusaetzliches Attribut "bild" fuer einen Knoten mit einer Abbildung
*/
node.bild {
	fill-mode: image-scaled;
	fill-image: url('images/logo_grau.png');
}


node.select {
	size: 20px, 20px;
	shape: box;
	stroke-color: #cc0000;
	stroke-width: 3px;
}

node.ernode {

	size: 20px, 20px;
	shape: box;
	fill-color: #ABABAB;
	stroke-mode: plain;
	stroke-color: #888888;
	stroke-width: 1px;
}

node.ernodem1 {
	size: 20px, 20px;
	shape: box;
	fill-color: #FFFF00;
	stroke-mode: plain;
	stroke-color: #888888;
	stroke-width: 1px;
}

node.ernodem2 {
	size: 20px, 20px;
	shape: box;
	fill-color: #FF0000;
	stroke-mode: plain;
	stroke-color: #888888;
	stroke-width: 1px;
}


/*
	Style-Angabe fuer eine Kante
*/
edge {
	fill-color: #003366;
	text-color: #003366;
	arrow-shape: arrow;
	arrow-size: 9px, 6px;
	text-size:  12;
	text-color: purple;
}

edge.infinitypath {
	size: 3px,3px;
	arrow-size: 3px, 3px;
	arrow-shape: arrow;
}
