package view;

import java.awt.BorderLayout;
import java.util.ArrayList;

import javax.swing.JPanel;
import javax.swing.JSplitPane;

import model.Arc;
import model.Knot;

public class GraphPanel extends JSplitPane{
	
	PetriGraph petrigraph;
	public PetriPanel petripanel;
	
	public GraphPanel(PetriGraph petrigraph) {
		this.petrigraph = petrigraph;
		petripanel = new PetriPanel(this.petrigraph);
		this.setOrientation(JSplitPane.HORIZONTAL_SPLIT);
		this.setDividerLocation(0.5);
		this.setLeftComponent(this.petripanel);
		
	}
	
	public void setPetriGraph(PetriGraph petrigraph) {
		this.petrigraph = petrigraph;
		petripanel.showGraph(this.petrigraph);
		
	}
}
